<div class="jumbotron">
  <div class="container">
    <h1>Get list of the best tracks</h1>
    <p>
      <%= link_to 'Do this!', create_playlist_path, class: 'btn btn-primary btn-lg' %>
    </p>
    <ol class="list-group">
      <% @top.each_with_index do |item, index| %>
        <li class="list-group-item">
          <%= image_tag(@images[index], class: "menu_icon")%>
          <%= item %><span class="glyphicon glyphicon-music"></span>
        </li>
      <% end %>
    </ol>
  </div>
</div>
